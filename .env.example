# RAG Chatbot - Environment Variables Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# SECURITY (REQUIRED)
# ============================================
# Generate a secure secret key:
# openssl rand -hex 32
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32

# JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# DATABASE (REQUIRED)
# ============================================
# SQLite (default, for development)
DATABASE_URL=sqlite:///./data/app.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/rag_chatbot

# ============================================
# OLLAMA CONFIGURATION (REQUIRED)
# ============================================
# Base URL for Ollama API
OLLAMA_BASE_URL=http://localhost:11434

# Model name (must be pulled: ollama pull qwen2.5:14b-instruct)
OLLAMA_MODEL=qwen2.5:14b-instruct

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Backend API URL (used by Streamlit frontend)
API_BASE_URL=http://localhost:8000

# ============================================
# CORS CONFIGURATION (for production)
# ============================================
# Comma-separated list of allowed origins
# Example: CORS_ORIGINS=http://localhost:8501,https://yourdomain.com
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# ============================================
# OPTIONAL: ENVIRONMENT
# ============================================
# Set to 'production' to enforce stricter security
ENVIRONMENT=development

# ============================================
# OPTIONAL: LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================
API_RATE_LIMIT=100
