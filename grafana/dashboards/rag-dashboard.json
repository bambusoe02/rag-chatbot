{
  "dashboard": {
    "title": "RAG Chatbot Metrics",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rag_requests_total[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Query Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rag_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "rag_active_users"
          }
        ]
      },
      {
        "id": 4,
        "title": "Total Documents",
        "type": "stat",
        "targets": [
          {
            "expr": "rag_total_documents"
          }
        ]
      },
      {
        "id": 5,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rag_cpu_usage_percent",
            "legendFormat": "CPU"
          },
          {
            "expr": "rag_memory_usage_percent",
            "legendFormat": "Memory"
          },
          {
            "expr": "rag_disk_usage_percent",
            "legendFormat": "Disk"
          }
        ]
      }
    ]
  }
}

